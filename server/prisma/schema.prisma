generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Card {
  id              String   @id // Scryfall ID
  name            String
  set_code        String
  set_name        String
  collector_number String
  image_uri       String?  // Nullable because some cards (like textless) might handle images differently or back faces
  small_image_uri String?
  oracle_text     String?
  type_line       String?
  rarity          String
  prices          Json?    // JSONB for flexible pricing data (usd, eur, tix)
  
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  @@index([name])
  @@index([set_code])
}